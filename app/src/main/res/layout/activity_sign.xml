<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.SignActivity"
    android:background="@color/red">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/biglogo_imageview"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/logo_long"
            />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adınız:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="40dp"/>

        <EditText
            android:background="@drawable/phone_text_corner"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/editTextnameSignActivity"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soyadınız:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="40dp"/>
        <EditText
            android:background="@drawable/phone_text_corner"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/editTextsurnameSignActivity"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Adresiniz:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="40dp"/>
        <EditText
            android:background="@drawable/phone_text_corner"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/editTextemailSignActivity"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textEmailAddress"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şifreniz:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="40dp"/>
        <EditText
            android:background="@drawable/phone_text_corner"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/editTextpasswordSignActivity"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPassword"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefon numaranız:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="40dp"/>
        <EditText
            android:background="@drawable/phone_text_corner"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/editTextphoneSignActivity"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone"/>

        <Button
            android:onClick="Sign"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:text="Kayıt Ol"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
</ScrollView>